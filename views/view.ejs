<!-- View file which displays the articles and the comments-->
<%- include("_header") -%>

    <div class="card" id="content">
        <h1>View this article</h1>
        <div class="card-body">
            <div>
                <form action="/like/<%= model.article_id %>" method="post">
                    <div class="form-horizontal">
                        <%- include("_display") -%>
                            <div class="form-group row">
                                <label class="col-form-label col-sm-2"></label>
                                <div class="col-sm-10">
                                    <form id="myform" method="post" action="/like/<%= model.article_id %>">
                                        <button class="btn btn-sm btn-primary" type="submit" id="likeBtn"
                                            method="post">Like</button>
                                    </form>
                                    <button class="share-button"
                                        onclick="alert('<%=global.url%>/view/<%=model.article_id %>')">Share
                                        Article</button>
                                    <a class="btn btn-outline-dark cancel" href="/home">Back</a>
                                    <p> Number of likes <%= model.likes %>
                                    </p>
                                </div>
                            </div>
                    </div>
                </form>
                <form id="myform" method="post" action="/like/<%= model.article_id %>"></form>
            </div>
        </div>
    </div>
    <div class="card" id="content">
        <h1>Add a Comment</h1>
        <div class="card-body">
            <div>
                <form action="/add-comment/<%= model.article_id %>" method="post">
                    <div class="row">
                        <div class="col-sm-6">
                            <input autofocus id='comment' class="form-control" name="comment" />
                        </div>
                        <div class="col-sm-6">
                            <button class="btn btn-outline-light cancel">Add Comment</a>
                        </div>
                    </div>
            </div>
            <table id="publishTable" class="table table-hover">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Comment</th>
                        <th>User</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (const comment of comments) { %>
                        <tr>
                            <td>
                                <%= comment.create_date %>
                            </td>
                            <td>
                                <%= comment.comment %>
                            </td>
                            <td>
                                <% for (const users of userList) { %>
                                    <% if (comment.user_id==users.user_id) { %>
                                        <%= users.user_name %>
                                            <% } %>
                                                <% } %>
                            </td>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
        </form>
    </div>


    <%- include("_footer") -%>
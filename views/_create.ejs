
<!-- Create article plug in that provides the fields that are editable -->

<div class="form-group row">
    <label class="col-form-label col-sm-2" for="article_name">Title</label>
    <div class="col-sm-8">
        <input autofocus id = 'article_name' class="form-control" name="article_name" value="<%= model.article_name %>" />
    </div>
</div>

<div class="form-group row">
    <label class="col-form-label col-sm-2" for="article_name">Subtitle</label>
    <div class="col-sm-8">
        <input autofocus id = 'article_subtitle' class="form-control" name="article_subtitle" value="<%= model.article_subtitle %>" />
    </div>
</div>

<div class="form-group row">
    <label class="col-form-label col-sm-2" for="content">Content</label>
    <div class="col-sm-7">
        <textarea class="form-control"  name="content" rows = "10"><%= model.content %></textarea>
    </div>
</div>
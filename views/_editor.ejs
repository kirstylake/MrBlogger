<!-- Edit plugin that provides the fields but in an edit format including the readonly dates  and author-->

<div class="form-group row">
    <label class="col-form-label col-sm-1" for="create_date">Create Date</label>
    <div class="col-sm-2">
        <input readonly autofocus id = 'create_date' class="form-control" name="create_date" value="<%= model.create_date %>" />
    </div>
    <label class="col-form-label col-sm-1" for="change_date">Change Date</label>
    <div class="col-sm-2">
        <input readonly autofocus id = 'change_date' class="form-control" name="change_date" value="<%= model.change_date %>" />
    </div>
    <label class="col-form-label col-sm-1" for="create_date">Author</label>
    <div class="col-sm-2">
        <input readonly autofocus id = 'user_name' class="form-control" name="user_name" value="<%= author.user_name %>" />
    </div>
</div>


<div class="form-group row">
    <label class="col-form-label col-sm-2" for="article_name">Title</label>
    <div class="col-sm-8">
        <input autofocus id = 'article_name' class="form-control" name="article_name" value="<%= model.article_name %>" />
    </div>
</div>

<div class="form-group row">
    <label class="col-form-label col-sm-2" for="article_subtitle">Subtitle</label>
    <div class="col-sm-8">
        <input autofocus id = 'article_subtitle' class="form-control" name="article_subtitle" value="<%= model.article_subtitle %>" />
    </div>
</div>

<div class="form-group row">
    <label class="col-form-label col-sm-2" for="content">Content</label>
    <div class="col-sm-7">
        <textarea class="form-control"  name="content" rows = "10"><%= model.content %></textarea>
    </div>
</div>


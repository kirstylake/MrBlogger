<!-- Delete article file which renders the delete article page-->

<%- include("_header") -%>

    <div class="card" id="content">
        <h1>Delete a Record</h1>
        <div class="card-body">
            <div>
                <form action="/delete/<%= model.article_id %>" method="post">
                    <div class="form-horizontal">
                        <%- include("_display") -%>
                            <div class="form-group row">
                                <label class="col-form-label col-sm-2"></label>
                                <div class="col-sm-10">
                                    <input type="submit" value="Delete" class="btn btn-default btn-danger" />
                                    <a class="btn btn-outline-dark cancel" href="/home">Cancel</a>
                                </div>
                            </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include("_footer") -%>
<!-- Edit article file which renders the delete article page-->

<%- include("_header") -%>

    <div class="card" id="content">
        <h1>Update a record</h1>
        <div class="card-body">
            <div>
                <form action="/edit/<%= model.article_id %>" method="post">
                    <div class="form-horizontal">
                        <%- include("_editor") -%>
                            <div class="form-group row">
                                <label class="col-form-label col-sm-2"></label>
                                <div class="col-sm-10">
                                    <input type="submit" value="Update" class="btn btn-default btn-warning" />
                                    <a class="btn btn-outline-dark cancel" href="/home">Cancel</a>
                                </div>
                            </div>
                    </div>
                </form>
            </div>
        </div>

        <%- include("_footer") -%>